<project>
  <target name="phploc"
          description="Measure project size using PHPLOC">
    <exec executable="phploc">
      <arg value="--log-csv" />
      <arg value="${basedir}/build/logs/phploc.csv" />
      <arg value="--exclude" />
      <arg value="${basedir}/app" />
      <arg value="--exclude" />
      <arg value="${basedir}/web" />
      <arg path="${basedir}" />
    </exec>
  </target>
</project>
